<tr class="row m-0">
  <td class="d-inline-block col-1"><%= provider.id %></td>
  <td class="d-inline-block col-3"><%= provider.name %></td>
  <td class="d-inline-block col-6"><%= provider.description %></td>
  <td class="d-inline-block col-1"><%= link_to 'Edit', edit_provider_path(provider), class: 'btn btn-primary' %></td>
  <td class="d-inline-block col-1"><%= link_to 'Destroy', provider_path(provider), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
</tr>
